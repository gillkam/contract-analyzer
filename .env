# ── Ollama ──
OLLAMA_MODEL=deepseek-r1
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_TIMEOUT=600

# ── LLM generation options ──
OLLAMA_TEMPERATURE=0.0
OLLAMA_TOP_P=1.0
OLLAMA_NUM_PREDICT=4096
OLLAMA_SEED=42

# ── Backend / FastAPI ──
API_PORT=8000
CORS_ORIGINS=*

# ── Analyzer (TF-IDF retrieval) tuning ──
CHUNK_SIZE=1500
CHUNK_OVERLAP=200
TOP_K_TEXT=10
TOP_K_TABLE=6

# ── RAG Chat tuning ──
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=150
RAG_SIMILARITY_K=4

# ── Frontend ──
API_BASE=http://127.0.0.1:8000
ANALYZE_TIMEOUT=300
CHAT_TIMEOUT=120
